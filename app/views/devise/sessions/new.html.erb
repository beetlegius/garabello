<div class="login-box">
  <div class="login-logo">
    <%= link_to root_path do %>
      Bienvenido a
      Gara<b>bello</b>
    <% end %>
  </div>
  <!-- /.login-logo -->
  <%= flash_messages %>
  <div class="login-box-body">
    <p class="login-box-msg">Inicie sesi√≥n para operar</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, placeholder: true, class: 'form-control' %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off", placeholder: true, class: 'form-control' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-8">
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox icheck">
              <label><%= f.check_box :remember_me %> <%= User.human_attribute_name :remember_me %></label>
            </div>
          <% end %>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit 'Ingresar', class: 'btn btn-primary btn-block btn-flat' %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>
    <hr>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
