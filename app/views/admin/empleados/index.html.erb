<%= content_for :header do %>
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <%= link_to t(:add, element: 'empleado'), new_admin_empleado_path, class: 'btn btn-primary btn-flat pull-right' %>
    <h1>
      <%= Empleado.model_name.human %>
      <small>panel principal</small>
    </h1>
  </section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">
          Listado de empleados
        </h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <%= tag.table role: :datatable, class: 'table table-bordered table-hover', data: { url: admin_empleados_path(format: :json) } do %>
          <thead>
            <tr>
              <th>ID</th>
              <th>Cuadrilla</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th></th>
            </tr>
          </thead>
          <tbody></tbody>
        <% end %>
      </div>
    </div>
  </div>
</div>
