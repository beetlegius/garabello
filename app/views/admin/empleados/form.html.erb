<%= content_for :header do %>
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <%= Empleado.model_name.human %>
      <small><%= @empleado&.nombre_completo %></small>
    </h1>
    <ol class="breadcrumb">
      <li><%= link_to fa_icon(:wrench, text: Empleado.model_name.human), admin_empleados_path %></li>
      <li class="active"><%= t(action_name, scope: :actions) %></li>
    </ol>
  </section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title"><%= @empleado.nombre_completo || 'Nuevo empleado' %></h3>
      </div>

      <%= simple_form_for [:admin, @empleado], html: { role: :form } do |f| %>
        <div class="box-body">
          <div class="row">
            <div class="col-xs-12">
              <%= f.association :cuadrilla, prompt: true %>
            </div>
            <div class="col-xs-12 col-sm-6">
              <%= f.input :nombre, autofocus: true, input_html: { placeholder: true } %>
            </div>
            <div class="col-xs-12 col-sm-6">
              <%= f.input :apellido, input_html: { placeholder: true } %>
            </div>
          </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
          <%= f.button :submit, class: 'btn btn-primary', data: { disable_with: t(:wait) } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
