<%= content_for :header do %>
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <%= Programa.model_name.human %>
      <small>reporte mensual de tareas</small>
    </h1>
  </section>,
<% end %>

<div class="box box-info">
  <div class="box-header">
    <h3 class="box-title">Aplicar filtros</h3>
  </div>
  <div class="box-body">
    <%= simple_form_for "", url: admin_reportes_tareas_path, method: :get, role: :form do |f| %>
      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <%= f.input :tarea_id, collection: @tareas, prompt: true, required: true, selected: params[:tarea_id] %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <%= f.input :ano, collection: @years, include_blank: false, selected: params[:ano] %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <%= f.label :desde %>
          <%= f.select :desde, options_for_select(@months, params[:desde]), { include_blank: 'Seleccione un mes' }, class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <%= f.label :hasta %>
          <%= f.select :hasta, options_for_select(@months, params[:hasta]), { include_blank: 'Seleccione un mes' }, class: 'form-control' %>
        </div>
      </div>
      <%= f.button :button, fa_icon(:search, class: 'fa-fw', text: 'Buscar'), class: 'btn btn-primary', data: { disable_with: t(:wait) } %>
    <% end %>
  </div>
</div>

<div class="box box-primary">
  <div class="box-header">
    <h3 class="box-title">
      Gr√°fico
    </h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= column_chart @series, stacked: true, xtitle: 'Meses', ytitle: @tarea&.unidad&.pluralize %>
  </div>
</div>
