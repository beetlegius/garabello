<%= content_for :header do %>
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <%= link_to fa_icon('file-excel-o', class: 'fa-fw', text: 'Descargar'), polymorphic_path([:admin, @movimiento.class], format: :csv), target: :_blank, class: 'btn bg-purple btn-flat pull-right' %>
    <%= link_to t(:add, element: @movimiento.class.model_name.human.singularize.downcase), [:new, :admin, @movimiento.class.name.tableize.singularize], class: 'btn btn-primary btn-flat pull-right' %>
    <h1>
      <%= @movimiento.class.model_name.human %>
      <small>panel principal</small>
    </h1>
  </section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">
          <%= @movimiento.class.model_name.human.humanize %> de productos
        </h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <%= tag.table role: :datatable, class: 'table table-bordered table-hover', data: { url: polymorphic_path([:admin, @movimiento.class], format: :json) } do %>
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Usuario</th>
              <th>Items</th>
              <th>Remito</th>
              <th>Estado</th>
              <th></th>
            </tr>
          </thead>
          <tbody></tbody>
        <% end %>
      </div>
    </div>
  </div>
</div>
