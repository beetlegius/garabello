<div class="box-group">
  <% for dia in (programa.desde..programa.hasta) %>
    <div class="panel box box-primary">
      <div class="box-header with-border">
        <h4 class="box-title">
          <%= link_to fa_icon(:calendar, class: 'fa-fw', text: date(dia, format: :tab)), "#consumos-#{dia}", data: { toggle: :collapse, parent: '#consumos' } %>
        </h4>
      </div>
      <div id="consumos-<%= dia %>" class="panel-collapse collapse in">
        <div class="box-body">
          <nav class="nav text-uppercase">
            <%= link_to_add_association 'Agregar consumo', f, :consumos, partial: 'admin/consumos/fields',
            wrap_object: Proc.new { |consumo| consumo.fecha = dia; consumo }, class: 'btn btn-sm btn-flat btn-primary',
            data: { association_insertion_node: "#consumo-fields-#{dia}", association_insertion_method: :append } %>
          </nav>
          <br />

          <table class="table table-striped table-condensed table-form">
            <thead>
              <tr>
                <th>Recurso</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Cantidad</th>
                <td></td>
              </tr>
            </thead>
            <%= tag.tbody id: "consumo-fields-#{dia}" do %>

              <% if programa.consumos.where(fecha: dia).exists? %>
                <% for consumo in programa.consumos.where(fecha: dia) %>
                  <%= f.simple_fields_for :consumos, consumo do |builder| %>
                    <%= render "admin/consumos/fields", f: builder, fecha: dia %>
                  <% end %>
                <% end %>
              <% else %>
                <tr class="empty-row">
                  <td colspan="5">No se han cargado consumos para esta jornada</td>
                </tr>
              <% end %>

            <% end %>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
