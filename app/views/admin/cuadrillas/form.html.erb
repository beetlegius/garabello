<%= content_for :header do %>
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <%= Cuadrilla.model_name.human %>
      <small><%= @cuadrilla&.nombre %></small>
    </h1>
    <ol class="breadcrumb">
      <li><%= link_to fa_icon(:wrench, text: Cuadrilla.model_name.human), admin_cuadrillas_path %></li>
      <li class="active"><%= t(action_name, scope: :actions) %></li>
    </ol>
  </section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title"><%= @cuadrilla.nombre || 'Nueva cuadrilla' %></h3>
      </div>

      <%= simple_form_for [:admin, @cuadrilla], html: { role: :form } do |f| %>
        <div class="box-body">
          <%= f.input :nombre, autofocus: true, input_html: { placeholder: true } %>
        </div><!-- /.box-body -->

        <div class="box-footer">
          <%= f.button :submit, class: 'btn btn-primary', data: { disable_with: t(:wait) } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
